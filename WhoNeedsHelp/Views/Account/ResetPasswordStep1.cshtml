@model WhoNeedsHelp.Models.ResetPasswordViewModel2

@{
    ViewBag.Title = "Nulstil kodeord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Vælg nyt kodeord</h2>

@using (Html.BeginForm("ResetPassword", "Account"))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary()

    @Html.HiddenFor(model => model.ResetKey)
    @Html.HiddenFor(model => model.Email)

    <div class="row">
        <div class="col s12">
            <div class="input-field">
                @Html.EditorFor(model => model.Password, new { @class = "validate" })
                @Html.LabelFor(model => model.Password)
                @Html.ValidationMessageFor(model => model.Password)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <div class="input-field">
                @Html.EditorFor(model => model.RepeatPassword, new {@class = "validate"})
                @Html.LabelFor(model => model.RepeatPassword)
                @Html.ValidationMessageFor(model => model.RepeatPassword)
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col s12">
            <button type="submit" class="btn waves-effect waves-light">Gem nyt kodeord</button>
        </div>
    </div>
}